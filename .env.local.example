# Environment Configuration
# Copy this file to .env.local and fill in your values

# Application Environment
# Options: development, staging, production
NODE_ENV=development

# API Base URL
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_TEAM_FEATURES=true

# Supabase Configuration (REQUIRED)
NEXT_PUBLIC_SUPABASE_URL=your-project-url.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Stripe Configuration (REQUIRED for payments)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PRICE_STARTER=price_xxxxxxxxxxxxx
STRIPE_PRICE_STANDARD=price_xxxxxxxxxxxxx
STRIPE_PRICE_PREMIUM=price_xxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# App Configuration (REQUIRED)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional Services
# OPENAI_API_KEY=sk-...
# DATABASE_URL=postgresql://...

# Email Service (REQUIRED for post-purchase/renewal emails)
# Resend API Key - Get from resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxx

# Authentication (Production Only)
# NEXTAUTH_URL=https://app.tripcostinsights.com
# NEXTAUTH_SECRET=your-secret-here
# JWT_SECRET=your-jwt-secret

# Storage (Production Only)
# AWS_ACCESS_KEY_ID=...
# AWS_SECRET_ACCESS_KEY=...
# AWS_S3_BUCKET=trip-cost-insights-uploads

# Monitoring & Error Tracking (Production Only)
# SENTRY_DSN=https://...
# VERCEL_ANALYTICS_ID=...

# Development Mode Settings
NEXT_PUBLIC_SHOW_DEV_TOOLS=true
NEXT_PUBLIC_MOCK_API_CALLS=true
